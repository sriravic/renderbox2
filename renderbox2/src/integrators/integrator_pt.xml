<!-- Integrator File : Path Tracing integrator -->

<integrator>
    <type>pt</type>
    <params>
        <maxdepth>10</maxdepth>                       <!-- Maximum depth for path tracing -->
        <usemaxdepth>yes</usemaxdepth>                <!-- Should a max depth clamp be used or renderered till all rays are traced and colors obtained -->
        <rrstart>5</rrstart>                          <!-- Russian roulette start depth -->
        <rrprob>0.5</rrprob>                          <!-- Russian roulette luminance probability value -->
    </params>
</integrator>